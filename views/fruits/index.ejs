<% layout('layouts/boilerplate')%>

<h1>All Fruits</h1>
<div>
    <a href="/fruits/new">Add Fruit</a>
</div>
<% for (let fruit of fruits){%>
<div class="card" mb-3>
    <div class="row">
        <div class="col-md-4">
            <img class="img-fluid" alt="" src="<%=fruit.image%>">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= fruit.title %> </h5>
                <p class="card-text"><%= fruit.description %></p>
                <p class="card-text">
                    <small class="text-muted"><%= fruit.location%></small>
                </p>
                <a class="btn btn-primary" href="/fruits/<%=fruit._id%>">View <%=fruit.title%></a>
            </div>
        </div>
    </div>
</div>
<% }%>