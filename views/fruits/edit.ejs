<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit Fruit</h1>
    <div class="col-6 offset-3">
        <form action="/fruits/<%=fruit._id%>?_method=PUT" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="fruit[title]"
                    value="<%=fruit.title %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="fruit[location]"
                    value="<%=fruit.location %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="fruit[image]"
                    value="<%=fruit.image %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Fruit Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="fruit[price]" value="<%=fruit.price %>" required>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description"
                    name="fruit[description]" required><%= fruit.description%></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update Fruit</button>
            </div>
        </form>
        <a href="/fruits/<%= fruit._id%>">Back To Fruit</a>

    </div>
</div>